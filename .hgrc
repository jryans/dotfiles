[alias]
show = log --patch --verbose --rev
blame = blame -udn
at = qnew try -m 'try: -b do -p all -u all -t none'
dt = qnew try -m 'try: -b do -p all -u all[Fedora,Ubuntu] -t none'

[defaults]
