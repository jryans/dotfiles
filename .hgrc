[alias]
show = log --patch --verbose --rev
blame = blame -udn
at = qnew try -m 'try: -b do -p all -u all -t none'
dt = qnew try -m 'try: -b do -p all -u all[Fedora,Ubuntu] -t none'

[defaults]
commit = -v
qnew = -U -D
qrefresh = -U -D
qseries = -s -v
revert = -C

[color]
mode = terminfo

[diff]
git = true
showfunc = true
unified = 8
patience = true

[pager]
pager = LESS="FRX" less
attend = annotate, cat, diff, export, glog, log, qdiff, incoming, show, blame

