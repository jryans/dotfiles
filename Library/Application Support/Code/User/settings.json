    "Wasm",
    "Workflow",
    "Zotero"
  ],
  "cSpell.enableFiletypes": [
    "latex",
    "markdown",
    "plaintext"
  ],
  "cSpell.diagnosticLevel": "Hint",

  "window.zoomLevel": 0,
  "editor.renderWhitespace": "none",
}
