// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontWeight": "500",
  "editor.fontSize": 14,
  "editor.inlayHints.fontSize": 10,
  "terminal.integrated.fontFamily": "Source Code Pro",
  "terminal.integrated.fontSize": 14,

  "workbench.iconTheme": null,
  "workbench.colorTheme": "Base16 Dark Tomorrow",
  "vscode-json-editor.theme": "dark",

  "editor.tabSize": 2,
  "editor.formatOnType": true,
  "editor.formatOnPaste": false,
  "editor.scrollBeyondLastLine": false,
  "files.insertFinalNewline": true,
  "rewrap.autoWrap.enabled": true,
  // Removes `-` so that Racket names are easily selectable
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.minimap.enabled": false,
  "editor.guides.indentation": false,
  "editor.cursorSurroundingLines": 4,
  "editor.stickyScroll.enabled": true,
  "notebook.stickyScroll.enabled": true,

  "diffEditor.maxComputationTime": 10000,

  "editor.rulers": [ 80, 90 ],
  "[rust]": {
    "editor.rulers": [ 99 ],
    "editor.tabSize": 4,
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.unicodeHighlight.invisibleCharacters": true,
  },
  "[beancount]": {
    "editor.rulers": [ 70 ],
  },
  "[makefile]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    "editor.tabSize": 2,
  },
  "[racket]": {
    "editor.rulers": [ 70, 102 ],
  },
  "[scheme]": {
    "editor.rulers": [ 70, 102 ],
  },

  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,
  "explorer.openEditors.visible": 0,

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/._*": true,
    "**/Thumbs.db": true,
    "**/obj-*": true,
    "**/*.cmd": true,
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/obj-*/**": true
  },

  "search.exclude": {
    "**/node_modules": true
  },

  "files.associations": {
    "*.jsm": "javascript",
    "*.configure": "python",
    "Makefrag*": "makefile",
    "*.ipynb": "json",
    "*.scrbl": "racket",
    "*.sps": "scheme",
    "*.lsp": "scheme",
    "*.zuo": "scheme"
  },

  "extensions.autoUpdate": false,
  "task.autoDetect": "off",

  "git.enabled": true,
  "git.countBadge": "off",
  "git.decorations.enabled": false,
  "git.autofetch": false,
  "git.autorefresh": false,
  "git.detectSubmodules": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "git.terminalAuthentication": false,
  "github.gitAuthentication": false,

  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.scopes": [
    "document"
  ],
  "gitlens.views.repositories.autoRefresh": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.keymap": "chorded",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
  },
  "gitlens.statusBar.reduceFlicker": true,
  "gitlens.blame.format": "${message|25?} ${agoOrDate|14-}",
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "details": true,
      "history": false,
      "remote": true
    },
    "editorGroup": false,
    "editorTab": {
      "compare": false,
      "history": false,
      "remote": true
    },
    "explorer": {
      "compare": true,
      "history": true,
      "remote": true
    }
  },

  "vim.normalModeKeyBindings": [
    {
      "before": ["u"],
      "commands": [
        "undo"
      ],
      "silent": true,
    },
    {
      "before": ["C-r"],
      "commands": [
        "redo"
      ],
      "silent": true,
    },
  ],

  "javascript.validate.enable": false,
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  "C_Cpp.dimInactiveRegions": false,
  "C_Cpp.clang_format_fallbackStyle": "LLVM",
  "C_Cpp.workspaceParsingPriority": "low",

  "python.defaultInterpreterPath": "/usr/local/bin/python3",
  "python.languageServer": "Pylance",

  "jupyter.askForKernelRestart": false,

  "eslint.run": "onSave",
  "eslint.options": {
    "ignore": false
  },

  "go.buildOnSave": "off",

  "rust-analyzer.lens.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.rustfmt.rangeFormatting.enable": true,

  "fennel-ls.executable": "/Users/jryans/Projects/Fennel/fennel-ls/fennel-ls",

  "beancount.separatorColumn": 64,

  "markdown.extension.orderedList.autoRenumber": false,
  "markdown.extension.toc.updateOnSave": false,

  "redhat.telemetry.enabled": true,

  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.message.latexlog.exclude": [
    "Overfull",
    "Underfull"
  ],
  "extensions.ignoreRecommendations": true,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "search.smartCase": true,
  "problems.decorations.enabled": false,
  "window.restoreWindows": "all",
  "workbench.list.defaultFindMode": "filter",
  "workbench.editor.empty.hint": "hidden",
  "debug.toolBarLocation": "docked",

  // Uppercase settings match VS Code, lowercase settings match iTerm2
  "workbench.colorCustomizations": {
    "terminal.background": "#1D1F21",
    "terminal.foreground": "#C5C8C6",
    "terminalCursor.background": "#C5C8C6",
    "terminalCursor.foreground": "#C5C8C6",
    "terminal.ansiBlack": "#1D1F21",
    "terminal.ansiBlue": "#86aec0",
    "terminal.ansiCyan": "#92bfb8",
    "terminal.ansiGreen": "#a5b474",
    "terminal.ansiMagenta": "#b28dad",
    "terminal.ansiRed": "#b05c57",
    "terminal.ansiWhite": "#C5C8C6",
    "terminal.ansiYellow": "#f0cb91",
    "terminal.ansiBrightBlack": "#969896",
    "terminal.ansiBrightBlue": "#86aec0",
    "terminal.ansiBrightCyan": "#92bfb8",
    "terminal.ansiBrightGreen": "#a5b474",
    "terminal.ansiBrightMagenta": "#b28dad",
    "terminal.ansiBrightRed": "#b05c57",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminal.ansiBrightYellow": "#f0cb91",
  },
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.persistentSessionScrollback": 1000,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",

  "cSpell.diagnosticLevel": "Hint",
  "cSpell.language": "en,en-GB,en-US",
  "cSpell.maxNumberOfProblems": 500,
