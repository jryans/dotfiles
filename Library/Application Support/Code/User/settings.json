// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontWeight": "500",

  "workbench.iconTheme": null,
  "workbench.colorTheme": "Base16 Dark Tomorrow",
  "vscode-json-editor.theme": "dark",

  "editor.tabSize": 2,
  "editor.formatOnType": true,
  "editor.formatOnPaste": false,
  "editor.scrollBeyondLastLine": false,
  "files.insertFinalNewline": true,
  "rewrap.autoWrap.enabled": true,

  "editor.rulers": [ 80, 90 ],
  "[rust]": {
    "editor.rulers": [ 99 ]
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": false,
  },
  "[beancount]": {
    "editor.rulers": [ 70 ],
  },
  "[makefile]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    "editor.tabSize": 2,
  },
  "[racket]": {
    "editor.rulers": [ 70, 102 ],
  },
  "editor.minimap.enabled": false,
  "editor.guides.indentation": false,
  "editor.cursorSurroundingLines": 4,

  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,
  "explorer.openEditors.visible": 0,

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/._*": true,
    "**/Thumbs.db": true,
    "**/obj-*": true,
    "**/*.cmd": true,
    "**/*.o": true,
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/obj-*/**": true
  },

  "search.exclude": {
    "**/node_modules": true
  },

  "files.associations": {
    "*.jsm": "javascript",
    "*.configure": "python",
    "Makefrag*": "makefile",
    "*.ipynb": "json",
    "*.scrbl": "racket",
    "*.sps": "scheme"
  },

  "extensions.autoUpdate": false,

  "git.enabled": true,
  "git.countBadge": "off",
  "git.decorations.enabled": false,
  "git.autofetch": false,
  "git.autorefresh": false,
  "git.detectSubmodules": false,
  "git.enableSmartCommit": true,
  "git.terminalAuthentication": false,
  "github.gitAuthentication": false,

  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.scopes": [
    "document"
  ],
  "gitlens.views.repositories.autoRefresh": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.keymap": "chorded",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
  },
  "gitlens.statusBar.reduceFlicker": true,

  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "details": true,
      "history": false,
      "remote": true
    },
    "editorGroup": false,
    "editorTab": {
      "compare": false,
      "history": false,
      "remote": true
    },
    "explorer": {
      "compare": true,
      "history": true,
      "remote": true
    }
  },

  "javascript.validate.enable": false,
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  "C_Cpp.dimInactiveRegions": false,
  "C_Cpp.clang_format_fallbackStyle": "Mozilla",

  "python.pythonPath": "/usr/local/bin/python3",
  "python.languageServer": "Pylance",

  "eslint.run": "onSave",
  "eslint.options": {
    "ignore": false
  },
  "eslint.packageManager": "yarn",

  "go.buildOnSave": "off",

  "FSharp.useSdkScripts": true,

  "rust-analyzer.updates.askBeforeDownload": false,
  "rust-analyzer.lens.enable": false,

  "magicRacket.languageServer.command": "/Users/jryans/Projects/Racket/racket/racket/bin/racket",
  "magicRacket.general.racketPath": "/Users/jryans/Projects/Racket/racket/racket/bin/racket",
  "magicRacket.general.racoPath": "/Users/jryans/Projects/Racket/racket/racket/bin/raco",

  "beancount.separatorColumn": 64,

  "markdown.extension.orderedList.autoRenumber": false,
  "markdown.extension.toc.updateOnSave": false,

  "workbench.activityBar.visible": true,
  "extensions.ignoreRecommendations": true,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "search.smartCase": true,
  "problems.decorations.enabled": false,
  "window.restoreWindows": "all",
  "workbench.list.keyboardNavigation": "filter",

  "cSpell.language": "en,en-GB,en-US",
  "cSpell.userWords": [
    "alastair",
    "analytics",
    "angr",
    "apps",
    "atomics",
